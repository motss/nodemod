{
  "testEnvironment": "node",
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "collectCoverageFrom": [
    "!**/node_modules/**",
    "!**/src/demo/**/*.js",
    "!**/dist/lib/**/*.js",
    "!**/dist/__test*__/**/CONSTANTS.js",
    "!**/dist/__test*__/**/*.spec.js"
  ],
  "verbose": true,
  "bail": true,
  "roots": [
    "<rootDir>/dist/"
  ],
  "testMatch": [
    "<rootDir>/dist/__test*__/**/*.spec.js"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json"
  ]
}

{
  "name": "nodemod",
  "version": "2.4.0",
  "description": "A collection of node modules for The Really Project",
  "keywords": [
    "motss",
    "node",
    "node-modules",
    "node_mod",
    "nodemod",
    "nodemodules",
    "typescript"
  ],
  "homepage": "https://github.com/motss/nodemod",
  "repository": {
    "type": "git",
    "url": "git@github.com:motss/nodemod.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rong Sen Ng (motss)",
    "email": "wes.ngrongsen@gmail.com",
    "url": "https://github.com/motss"
  },
  "files": [
    "dist/**/*.*js.map",
    "dist/**/*.*js",
    "dist/**/*.d.ts.map",
    "dist/**/*.d.ts",
    "!dist/**/*.spec.d.ts.map",
    "!dist/**/*.spec.d.ts",
    "!dist/**/*.spec.js.map",
    "!dist/**/*.spec.js",
    "!dist/**/test/**/*.*"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "npm run ts -- -p tsconfig.prod.json && npm run build:lib",
    "build:lib": "rollup --config ./rollup.config.lib.js",
    "build:lib:test": "rollup --config ./rollup.config.lib.test.js",
    "build:mod": "node --max-old-space-size=8192 ./node_modules/rollup/dist/bin/rollup --config ./rollup.config.js",
    "build:test": "npm run ts -- -p tsconfig.test.json && npm run build:lib:test",
    "clean": "shx rm -rf dist/",
    "jest": "cross-env NODE_ICU_DATA=node_modules/full-icu jest --config ./.jestrc.json",
    "lint": "npm run lint:debug -- --config tslint.prod.json",
    "lint:debug": "tslint --project tsconfig.json --format stylish",
    "prepublishOnly": "npm run clean && npm run lint && npm run build",
    "test": "npm run clean && npm run lint && npm run build:test && npm run jest",
    "ts": "tsc",
    "upgrade": "npm outdated --dev && npm update --dev && npm audit fix",
    "watch": "npm run ts -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run ts -- --noEmit && npm run clean"
    }
  },
  "dependencies": {
    "@types/parse5": "^5.0.2",
    "@types/prismjs": "^1.16.0",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@reallyland/tsconfig": "^2.0.0",
    "@reallyland/tslint-config": "^1.1.1",
    "@types/jest": "^24.9.1",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^13.9.1",
    "cross-env": "^7.0.2",
    "full-icu": "^1.3.1",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lodash-es": "^4.17.15",
    "nock": "^12.0.2",
    "node-fetch": "^2.6.0",
    "parse5": "^5.1.1",
    "prismjs": "^1.19.0",
    "rollup": "^1.32.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "shx": "^0.3.2",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">= 10.18.1",
    "npm": ">= 6.13.4"
  },
  "publishConfig": {
    "access": "public"
  }
}

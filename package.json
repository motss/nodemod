{
  "name": "node_mod",
  "version": "0.0.0",
  "private": true,
  "description": "A collection of node modules for The Really Project",
  "keywords": [
    "node_mod",
    "node",
    "typescript"
  ],
  "homepage": "https://github.com/reallyland/node_mod",
  "repository": {
    "type": "git",
    "url": "git@github.com:reallyland/node_mod.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rong Sen Ng (motss)",
    "email": "wes.ngrongsen@gmail.com",
    "url": "https://github.com/motss"
  },
  "files": [
    "dist/*.*js.map",
    "dist/*.*js",
    "dist/*.d.ts.map",
    "dist/*.d.ts"
  ],
  "main": "dist/index",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "npm run ts -- -p tsconfig.prod.json",
    "build:test": "npm run clean && tsc -p ./tsconfig.test.json",
    "clean": "shx rm -rf dist/",
    "lint": "npm run lint:debug -- --config tslint.prod.json",
    "lint:debug": "tslint --project tsconfig.json --format stylish",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "npm run lint && npm run build:test && npm run jest",
    "jest": "jest --config ./.jestrc.json",
    "ts": "npm run clean && tsc",
    "watch": "npm run ts -- --watch"
  },
  "dependencies": {
    "hash.js": "^1.1.7",
    "safe-buffer": "^5.1.2"
  },
  "devDependencies": {
    "@reallyland/tsconfig": "^1.0.0",
    "@reallyland/tslint-config": "^1.1.0",
    "@types/jest": "^24.0.14",
    "@types/node": "^12.0.8",
    "jest": "^24.8.0",
    "shx": "^0.3.2",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2"
  },
  "engines": {
    "node": ">= 8.16.0",
    "npm": ">= 6.4.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
